<h1>部屋一覧</h1>

  <table>
      <thead>
        <tr>
          <th>名前</th>
          <th>情報</th>
          <th>料金</th>
        </tr>
      </thead>
 
      <tbody>
        <% @rooms.each do |room| %>
          <tr>
            <td><%= room.room_name %></td>
            <td><%= room.introduction %></td>
            <td><%= room.room_price %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
 
    <p><%= link_to "ルーム情報新規登録", :new_room %></p>