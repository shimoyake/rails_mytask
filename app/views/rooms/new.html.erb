
<h1>部屋登録</h1>
    
    <%= form_with model: @room, url:rooms_path, method: :post, local: true do |f| %>
      <table>
        <tr>
          <th><%= f.label :room_name ,"名前" %></th>
          <td><%= f.text_field :room_name %></td>
        </tr>
 
        <tr>
          <th><%= f.label :introduction ,"情報" %></th>
          <td><%= f.text_field :introduction %></td>
        </tr>
 
        <tr>
          <th><%= f.label :room_price ,"料金" %></th>
          <td><%= f.text_field :room_price %></td>
        </tr>
        
        <tr>
          <th><%= f.label :room_area ,"都道府県" %></th>
          <td><%= f.text_field :room_area %></td>
        </tr>
        
        <tr>
          <th><%= f.label :address ,"住所" %></th>
          <td><%= f.text_field :address %></td>
        </tr>
        
        <tr>
          <th>ルーム画像</th>
          <td><%= f.file_field :room_image %></td>
        </tr>
      </table>
      
      <%= hidden_field_tag :user_id, @user_id %>
 
      <div>
        <ul>
          <li><%= f.submit "登録完了する"%></li>
          <li><%= link_to "ユーザー情報一覧に戻る", :rooms %></li>
        </ul>
      </div>
    <% end %>
<%= link_to '戻る', rooms_path %>